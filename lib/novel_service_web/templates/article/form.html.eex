<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>入力に誤りがあります</p>
    </div>
  <% end %>

  <%= label f, :タイトル %>
  <%= text_input f, :title %>
  <%= error_tag f, :title %>

  <%= label f, :本文 %>
  <%= text_input f, :content %>
  <%= error_tag f, :content %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
