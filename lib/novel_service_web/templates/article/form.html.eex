<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>入力に誤りがあります</p>
    </div>
  <% end %>

  <%= label f, :タイトル %>
  <%= text_input f, :title %>
  <%= error_tag f, :title %>

  <%= label f, :本文 %>
  <%= textarea f, :content, [class: "form-control"] %>
  <%= error_tag f, :content %>

  <div>
    <%= submit "保存" %>
  </div>
<% end %>
