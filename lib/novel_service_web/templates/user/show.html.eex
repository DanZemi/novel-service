<div class="l-container">
  <div class="main_search">
<h1><%= @user.name %>さんのマイページ</h1>
<h2><%= @user.name %>さんの作品一覧</h2>
  <div class="searchkekka_box">
<%= for article <- @user.articles do %>
    <p><%= link article.title, to: Routes.article_path(@conn, :summary, article) %></P>
    最終更新日: <%= article.updated_at %>
    <hr class="line">
<% end %>
<span><%= link "#{@user.name}さんのマイページへ", to: Routes.user_path(@conn, :userinfo, @user) %></span>
</div>
</div>
